<div class='container'>
      <%= render 'layouts/errors', obj: @book_comment %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %>
            <% end %>
          </td>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
            <% end %>
          </td>
           </td>
        <td><%= link_to @book.title, book_path(@book), class: "book_#{@book.id}" %></td>
        <td><%= @book.body %></td>

        <td>
          <% if @book.favorited_by?(current_user) %>
          <p>
            <%= link_to book_favorites_path(@book), method: :delete do %>
             ♥<%= @book.favorites.count %>
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to book_favorites_path(@book), method: :post do %>
             ♡<%= @book.favorites.count %>
            <% end %>
          </p>
          <% end %>
        </td>

          <td>
            <p>コメント数:<%= @book.book_comments.count %></p>
          </td>
        </tr>
      </table>

      <table>


          <div class="comments">
              <% @book.book_comments.each do |book_comment| %>
              <tr>
                <td><%= book_comment.user.name %></td>
                <td><%= book_comment.comment %></td>


              <td><% if @book.user == current_user %>
          <div class="comment-delete">
            <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}" %>
          </div>
            <% end %>
            </td>
            </tr>
              <% end %>
            </div>



      </table>

          <div class="new-comment">
          <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
            <%= f.text_area :comment, rows:'8', size: "80*70" %></br>
            <%= f.submit "送信" %>
          <% end %>
          </div>
    </div>
  </div>
</div>